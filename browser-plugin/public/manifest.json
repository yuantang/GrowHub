{
  "manifest_version": 3,
  "name": "GrowHub 社媒助手",
  "description": "GrowHub 浏览器插件 - 分布式数据采集执行层",
  "version": "1.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.douyin.com/*"],
      "js": ["content/douyin.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "cookies",
    "storage",
    "offscreen",
    "alarms",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "popup.html"
  },
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "*://*.xiaohongshu.com/*",
    "*://*.douyin.com/*",
    "*://*.kuaishou.com/*",
    "*://*.bilibili.com/*",
    "*://*.weibo.com/*",
    "*://*.weibo.cn/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:* ws://localhost:* http://127.0.0.1:* ws://127.0.0.1:* https://*.xiaohongshu.com https://*.douyin.com https://*.kuaishou.com https://*.bilibili.com https://*.weibo.com https://*.weibo.cn"
  }
}
